        <TextView
            android:id="@+id/starttime"
            android:shadowColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/enter_starttime"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/enddate"
            android:layout_toRightOf="@+id/image_startdate"
            android:editable="false"
            android:textSize="20dp"/>


        <TextView
            android:id="@+id/endtime"
            android:textSize="20dp"
            android:shadowColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/enter_endtime"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/enddate"
            android:layout_alignLeft="@+id/enddate"
            android:layout_alignStart="@+id/enddate"
            android:layout_marginTop="20dp"
            android:editable="false" />
    </RelativeLayout>


    <TextView
        android:layout_below="@+id/endtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm Notification"
        android:textSize="20dp"
        android:id="@+id/alarmNotification"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_gravity="left"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/alarm"
        android:shadowColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:hint="@string/alarm_every"
        android:layout_below="@+id/alarmNotification"
        android:layout_marginTop="5dp"
        android:editable="false"
        android:paddingLeft="20dp"
